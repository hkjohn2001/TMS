<h1>New User</h1>

<% semantic_form_for @user do |f| %>
	<% f.inputs do %>
		<%= f.input :name %>
		<%= f.input :email %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<%= f.input :groups %>
	<% end %>
		
	<div class="actions">
		<%= f.submit :signup %><br />
	</div>

<% end %>

